<html>
    <script src="https://unpkg.com/prettier@2.3.0/standalone.js"></script>
    <script src="https://unpkg.com/prettier@2.3.0/parser-typescript.js"></script>
    <head>
        <link rel="icon" href="./favicon.ico" />
        <meta charset="utf-8" />
        <title><%=title%></title>
        <meta
            name="viewport"
            content="width=device-width,user-scalable=no,initial-scale=1, minimum-scale=1,maximum-scale=1"
        />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="full-screen" content="yes" />
        <meta name="screen-orientation" content="portrait" />
        <meta name="x5-fullscreen" content="true" />
        <meta name="360-fullscreen" content="true" />
        <meta name="renderer" content="webkit" />
        <meta name="force-rendering" content="webkit" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <link rel="stylesheet" type="text/css" href="./index.css" />
    </head>
    <body>
        <%- include(cocosToolBar, {config: config}) %>
        <div id="content" class="content">
            <canvas id="texCanvas"></canvas>
            <canvas id="viewCanvas"></canvas>
            <div class="contentWrap">
                <div id="GameDiv" class="wrapper">
                    <canvas id="GameCanvas"></canvas>
                    <div id="splash">
                        <div class="progress-bar stripes"><span></span></div>
                    </div>
                    <div id="bulletin">
                        <div id="sceneIsEmpty" class="inner"><%=tip_sceneIsEmpty%></div>
                    </div>
                    <div class="error" id="error">
                        <div class="title">Error <i>(Please open the console to see detailed errors)</i></div>
                        <div class="error-main"></div>
                    </div>
                </div>
            </div>
            <p class="footer">
                Created with <a href="https://www.cocos.com/products" target="_blank" title="Cocos Creator">Cocos Creator</a>
            </p>
        </div>
        <%- include(cocosTemplate, {}) %>
    </body>
    <script>
        // 打印gl调用的debug信息
        window.showGlDebugLog = true
        // 0 不做任何操作(不会启动glhack)
        // 一旦启用glhack 只会支持webgl1 且对于extension属性不会生效
        // 1 使用软渲染替代webgl的渲染
        // 2,3 都是使用的原生的webgl渲染 
        // 2 将glsl shader代码转换为ts的代码
        // 3 替换原本的glsl代码
        window.glDebugMode = 3
        // 原本游戏渲染的canvas
        window.gameCanvas = 'GameCanvas'
        // 软渲染使用的canvas
        window.cpuRenderCanvas = 'viewCanvas'
    </script>
    <script src="jszip.min.js"></script>
    <script src="main-bundle.js"></script>
</html>
